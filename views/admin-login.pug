include includes/header.pug 
block content 
    link(rel="stylesheet", href="/stylesheets/dashboard.css")
    body
        div(class="container pt-3")
            h5.font-bold Welcome back to your login page, ADMIN!!!!!!
            p.font-italic #[strong Note :] Your email is your default password
            .row.justify-content-center
                    .form-field
                        h5.form_text Enter Your Details
                        form(method="POST" class="mt-4 text-center")
                          input(type="text" name="email" placeholder="Email" class="login_form input-control input_text" id="firstname") 
                          input(type="password" name="password" placeholder="Password" class="login_form input-control mt-3 input_text" id="lastname")
                           
                          p(class='formAlert form-alertError' id='response-register') #{error}
                          div(class=" mb-5")
                            button(type="submit" class="form_button mt-4 validate") Login







    include includes/footer.pug 