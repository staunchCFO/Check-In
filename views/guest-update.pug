include includes/header.pug 
block content 
    link(rel="stylesheet", href="/stylesheets/dashboard.css")
    link(rel="stylesheet", href="/stylesheets/mainHome.css")
    body
        include includes/navbar.pug
        div(class="container guest_container")
            div(class="d-flex justify-content-between")
                h5.font-bold Update your Guest
                
            .row.justify-content-center
                .col-md-6
                    .form-field
                        form(method="POST")
                            div.row 
                                div(class="col-md-6 mr-2")
                                    label(class="label") First Name :
                                    input(type="text" class="login_form input-control input_text mb-3 mr-5" name="firstName" value= guestDB.firstName)
                                div(class="col-md-6 mr-2")
                                    label(class="label") Last Name :
                                    input(type="text" class="login_form input-control input_text mb-3" name="lastName" value= guestDB.lastName)
                                div(class="col-md-6 mr-5")
                                    label(class="label") Table Number :
                                    input(class="login_form input-control input_text mb-3 custom-select" name="tableNumber" value= guestDB.tableNumber)
                                div(class="col-md-6 mr-2")
                                    label(class="label") Partner :
                                    input(class="login_form input-control input_text mb-3 custom-select" name="extraGuest" value= guestDB.extraGuest)

                            div(class="text-cen")
                                button(type="submit" class="form_button mb-5") Continue
    







    include includes/footer.pug 