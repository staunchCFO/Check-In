include includes/header.pug 
block content 
    link(rel="stylesheet", href="/stylesheets/dashboard.css")
    body
        div(class="container pt-3")
            if admin.length === 0
                h5.admin_note Be The Admin
            p #[strong Note :] Your email address will be your default password
            .row.justify-content-center
                .col-md-6
                    .form-field
                        if admin.length === 0
                            form(method="POST")
                                div(class="text-center")
                                    input(type="text" class="login_form input-control input_text" name="firstName" placeholder="First Name" required)
                                    input(type="text" class="login_form input-control mt-3 input_text" name="lastName" placeholder="Last Name" required)
                                    input(type="text" class="login_form input-control mt-3 input_text" name="email" placeholder="Email" required)
                                    input(type="tel" class="login_form input-control mt-3 input_text" name="number" placeholder="Phone" required)
                                    select(class="login_form input-control mt-3 custom-select" name="gender" required)
                                        option(value="Gender" selected disabled="disabled") ------------
                                        option(value="male") Male
                                        option(value="female") Female

                                div(class="text-center")
                                    button(type="submit" class="form_button mt-4 validate") Continue
                        
                        else
                            h5.form_text Welcome Admin
                            form(method="POST" class="mt-4 text-center")
                                input(type="text" name="email" placeholder="Email" class="login_form input-control input_text" id="firstname") 
                                input(type="password" name="password" placeholder="Password" class="login_form input-control mt-3 input_text" id="lastname")
                                
                                p(class='formAlert form-alertError' id='response-register') #{error}
                                div(class=" mb-5")
                                    button(type="submit" class="form_button mt-4 validate") Login







    include includes/footer.pug 